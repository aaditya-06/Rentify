<% layout('/Layouts/Boilerplate') %>
<body>
  <div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Add Listing</h2>

    <div class="card shadow-sm p-4">
      <form method="POST" action="/listings">
        <div class="mb-3">
          <label for="title" class="form-label fw-bold">Title:</label>
          <input type="text" id="title" name="listing[title]" class="form-control" required />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label fw-bold">Description:</label>
          <textarea id="description" name="listing[description]" rows="4" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label fw-bold">Upload Image:</label>
          <input type="text" id="image" name="listing[image]" class="form-control" placeholder="Image URL" required />
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="price" class="form-label fw-bold">Price (&#8377;):</label>
            <input type="number" id="price" name="listing[price]" class="form-control" step="0.01" required />
          </div>
          <div class="col-md-6 mb-3">
            <label for="location" class="form-label fw-bold">Location:</label>
            <input type="text" id="location" name="listing[location]" class="form-control" required />
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label fw-bold">Country:</label>
          <select id="country" name="listing[country]" class="form-select" required>
            <option value="">Select a country</option>
            <option value="USA">USA</option>
            <option value="Canada">Canada</option>
            <option value="UK">UK</option>
            <option value="Australia">Australia</option>
            <option value="India">India</option>
          </select>
        </div>

        <div class="text-center">
            <button type="button" class="btn btn-danger">Submit</button>
        </div>
      </form>
    </div>
  </div>
</body>
